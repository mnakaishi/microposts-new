<% if @user.follower_users.empty? %>
    <span>No Followers</span>
<% else %>
    <h1>Followers list</h1>
    <div class="row">
    <% @user.follower_users.each do |follower_user| %>
      <div class="col-md-4">
      <%= gravatar_for follower_user %>
        <span>ID:<%= follower_user.id %></span>
        <div><%= link_to follower_user.name, user_path(follower_user) %></div>
      </div>
    <% end %>
<% end %>