<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to 'フォロー',followings_user_path(@user) %>
      <%= link_to 'フォロワー',followers_user_path(@user) %>
      <br>
      <%= link_to 'お気に入り',favorites_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <h1><%= @title %></h1>
       <% @target_users.each do |user| %>
         <div class="row">
           <div class="col-md-6">
           <%= gravatar_for user %>
           <span class="label label-primary"><%= user.name %></span>
           [id:<%= user.id %>]
           <br><br>
           </div>    
           <div class="col-md-6">
             <% @user = user %> 
             <%= render 'follow_list_form' if logged_in? %>
           </div>
           <br><br>
         </div>
         <br><br>
       <% end %>
  </div>
</div>  