<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <%= @user.region %>
    <br>
    <%= @user.profile %>

    

    <ul class="list-unstyled">  
      <li><%= link_to 'follow', followings_user_path %>（<%= @user.following_users.count %>）</li>
      <li><%= link_to 'follower', followers_user_path %>（<%= @user.follower_users.count %>）</li>
    </ul>

    
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <%= paginate(@microposts) %>
      </ol>
    <% end %>
  </div>
  
  
　<% if @user.image? %>
　　<%= image_tag @user.image.thumb.url %>
　<% else %>
　　<%= image_tag 'noimage.gif' %>
　<% end %> 

</div>