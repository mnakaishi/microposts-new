<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to 'フォロー',followings_user_path(@user) %>
      <%= link_to 'フォロワー',followers_user_path(@user) %>
      <br>
      <%= link_to 'お気に入り',favorites_user_path(@user) %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @favorite_microposts.any? %>
      <h3>お気に入り (<%= @favorite_microposts.count %>)</h3>
      <ol class="microposts">
        <% @favorite_microposts.each do |micropost| %>
          <%= render partial: 'microposts/micropost', locals: { micropost: micropost } %>
        <% end %>
      </ol>
    <% end %>
  </div>
</div>